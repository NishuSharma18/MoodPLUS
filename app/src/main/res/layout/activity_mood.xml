<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation ="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation ="horizontal">
            <TextView
                android:id="@+id/mood"
                android:layout_width="210dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="Current Mood :"
                android:textColor="#F2C1940A"
                android:textSize="29sp"
                android:fontFamily="@font/atma_semibold"
                app:textAllCaps="false" />

            <TextView
                android:id="@+id/moodType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:gravity="center"
                android:text="Happy"
                android:textColor="#630573"
                android:textSize="35sp"
                android:fontFamily="@font/atma_semibold"
                app:textAllCaps="false" />
        </LinearLayout>


        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart_mv"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="350dp"
            >

        </com.github.mikephil.charting.charts.LineChart>

        <TextView
            android:id="@+id/query_tv"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:fontFamily="@font/atma_semibold"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:text="Hello dear, how are you feeling?"
            android:textColor="#000000"
            android:textSize="27sp"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/feel_happy_tv"
                android:layout_width="wrap_content"
                android:textSize="25sp"
                android:fontFamily="@font/atma_semibold"
                android:layout_height="wrap_content"
                android:text="Button 1"
                android:layout_weight="1" />
            <Space
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/feel_sad_tv"
                android:layout_width="wrap_content"
                android:textSize="25dp"
                android:fontFamily="@font/atma_semibold"
                android:layout_height="wrap_content"
                android:text="Button 2"
                android:layout_weight="1" />
            <Space
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/feel_okay_tv"
                android:layout_width="wrap_content"
                android:textSize="24dp"
                android:fontFamily="@font/atma_semibold"
                android:layout_height="wrap_content"
                android:text="Button 3"
                android:layout_weight="1" />
            <Space
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/feel_stressed_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:fontFamily="@font/atma_semibold"
                android:text="Button 4"
                android:layout_weight="1" />


        </LinearLayout>

    </LinearLayout>
</ScrollView>